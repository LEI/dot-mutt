# Remap heasers to H instead of h
bind pager H display-toggle-weed

# Remap J from nex-entry to ?
# bind pager J next-entry

bind pager g  noop
bind pager gg top
bind pager G bottom
bind pager h previous-undeleted
bind pager j next-line
bind pager k previous-line
bind pager l next-undeleted
# bind pager <down> next-line
# bind pager <up> previous-line
bind attach,index g noop
bind attach,index gg first-entry
bind attach,index G last-entry # TODO: check original G map
bind attach,index,pager \CD next-page
bind attach,index,pager \CU previous-page

# Load local config file for local overrides
source `x=~/.muttrc.local; if [ -e "$x" ]; then echo "$x"; fi; echo /dev/null`

# Match terminal theme colors
source `if [ -e "$MUTT_COLORS" ]; then echo "~/.mutt/colors/$MUTT_COLORS"; fi; echo /dev/null`
